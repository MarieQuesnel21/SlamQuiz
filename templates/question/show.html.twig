{% extends 'base.html.twig' %}

{% block title %}Question{% endblock %}

{% block body %}
    <h1>Question</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ question.id }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ question.text }}</td>
            </tr>
            <tr>
                <th>{{ 'Created_at'|trans }}</th>
                <td>{{ question.createdAt ? question.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>{{ 'Updated_at'|trans }}</th>
                <td>{{ question.updatedAt ? question.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

        <a class="btn btn-primary" href="{{ path('question_index') }}">{{'back to list'|trans}}</a><br>

    <table>
    <tr><td><a class="btn btn-secondary" href="{{ path('question_edit', {'id': question.id}) }}">{{ 'edit'|trans }}</a></td>

    <td>{{ include('question/_delete_form.html.twig') }}</td></tr>
    </table>
{% endblock %}
