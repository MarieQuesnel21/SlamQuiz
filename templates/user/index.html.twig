{% extends 'base.html.twig' %}

{% block title %}{{ 'User index'|trans }}{% endblock %}

{% block body %}
<br>
    <h1>{{ 'User index'|trans }}</h1>
    <br>
    <center>
    <table class="table table-hover table-dark" style="margin-left:-20%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>{{ 'Role'|trans }}</th>
                <th>{{ 'Password'|trans }}</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>
                    <a type="button" class="btn btn-danger" href="{{ path('user_show', {'id': user.id}) }}">{{ 'show'|trans }}</a>
                    <a type="button" class="btn btn-danger" href="{{ path('user_edit', {'id': user.id}) }}">{{ 'edit'|trans }}</a>
                    <a type="button" class="btn btn-danger" href="{{ path('user_delete', {'id': user.id}) }}">{{ 'delete'|trans }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</center>

    <a  class="btn btn-primary" href="{{ path('user_new') }}">{{'Create new'|trans}}</a>
{% endblock %}
